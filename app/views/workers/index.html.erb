<% if (!user_signed_in?&&!admin_signed_in?) %>
  <div class="jumbotron">
    <h2>Your Favorite Worker Reviewed</h2>
    <p>Give a review to the housekeeping service provided</p>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-md" %></p>
  </div>
<% end %>

<div class="row">
  <% @workers.each do |worker| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag worker.image.url(:small), class: 'image'), worker %>
        <%= link_to worker.title,worker %>
      </div>
    </div>
  <% end %>
</div>
<% if current_admin %>
<%= link_to('Logout', destroy_admin_session_path, method: :delete) %>
<% elsif current_user %>
<%= link_to('Logout', destroy_user_session_path, method: :delete) %>
<% end %>
