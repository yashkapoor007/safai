<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @worker.image.url(:small) %>
        <div class="star-rating" data-score= <%= @avg_review %> ></div>
        <em><%= "#{@reviews.length}" %> reviews </em>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @worker.title %></td>
              </tr>
              <tr>
                <td><strong>Mobile No.:</strong></td>
                <td><%= @worker.mobile_no %></td>
              </tr>
              <tr>
                <td><strong>Hostel:</strong></td>
                <td><%= @worker.hostel %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to 'Write a Review', new_worker_review_path(@worker) %>
        </div>
</div>
<div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @worker.title %></h1>
        <% if @reviews.blank? %>
          <h3>No reviews just yet, would you like to add the first!</h3>
          <%= link_to "Write Review", new_worker_review_path(@worker), class: "btn btn-danger" %>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="reviews">
              <table class="table">
                <tbody>
                  <tr>
                    <td><strong>Title:</strong></td>
                    <td><%= review.name %></td>
                  </tr>
                  <tr>
                    <td><strong>Mobile No.:</strong></td>
                    <td><%= review.mobile_no %></td>
                  </tr>
                  <tr>
                    <td><strong>Time in:</strong></td>
                    <td><%= review.time_in %></td>
                  </tr>

                  <tr>
                    <td><strong>Time out:</strong></td>
                    <td><%= review.time_out %></td>
                  </tr>
                  <tr>
                    <td><strong>Rating:</strong></td>
                    <td><div class="star-rating" data-score= <%= review.rating %> ></div></td>
                  </tr>
                </tbody>
              </table>
          <% end %>
        <% end %>
</div>
<%= link_to 'Edit', edit_worker_path(@worker) %>
</div>
</div>
</div>
<% if current_admin %>
<%= link_to('Logout', destroy_admin_session_path, method: :delete) %>
<% elsif current_user %>
<%= link_to('Logout', destroy_user_session_path, method: :delete) %>
<% end %>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>
